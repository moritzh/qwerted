<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/pref.itype_preferences">
	<CheckBoxPreference android:key="keyboard.predict"
		android:defaultValue="true" android:title="@string/pref.dict.prediction"
		android:summary="@string/pref.dict.prediction_summary" />
	<CheckBoxPreference android:key="keyboard.vibrate"
		android:defaultValue="false" android:title="@string/pref.dict.vibrate"
		android:summary="@string/pref.dict.vibrate_summary" />

	<Preference android:title="@string/pref.dict.dict"
		android:summary="@string/pref.dict.dict_summary" android:id="@+id/dict.launcher"
		android:name="dict.launcher">
	</Preference>

	<EditTextPreference android:numeric="decimal"
		android:maxLength="1" android:key="view.button.gap" android:title="@string/pref.view.gap"
		android:summary="@string/pref.view.gap_summary" android:defaultValue="4" />
</PreferenceScreen>